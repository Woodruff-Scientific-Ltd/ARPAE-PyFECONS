  journal   = {Plasma Physics Reports},
  title     = {A phenomenological model of the current filamentation instability driven by cathode processes in the Livermore spheromak},
  year      = {2003/07/},
  issn      = {1063-780X},
  note      = {current filamentation instability;cathode processes;Livermore spheromak;current density;bulk plasma;neutral density;ionization;electrons;particle balance;recycling coefficient;cathode temperature;sheath voltage;hot spots;ionizing layer;discoloration patterns;magnetic field;footpoints;ion gyroradius;spherical tokamaks;coaxial helicity injection;},
