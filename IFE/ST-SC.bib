@Article{Alladio2007/08/,
  author    = {Alladio, F. and Mancuso, A. and Micozzi, P. and Rogier, F.},
  journal   = {Physics of Plasmas},
  title     = {Integration of vacuum potential energy into ideal magnetohydrodynamic stability calculations for flux-core-spheromak configurations},
  year      = {2007/08/},
  issn      = {1070-664X},
  note      = {vacuum potential energy;ideal magnetohydrodynamic stability;flux-core-spheromak configurations;MHD;magnetoplasma equilibria;perturbed magnetic energy;plasma edge;conducting shells;spherical tori;magnetic separatrix;screw pinch discharge;plasma-vacuum interface;Green's function method;finite element method;},
