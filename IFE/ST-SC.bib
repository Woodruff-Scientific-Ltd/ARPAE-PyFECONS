@Article{Garcia-Martinez2009/08/,
  author    = {Garcia-Martinez, P.L. and Farengo, R.},
  journal   = {Physics of Plasmas},
  title     = {Nonlinear dynamics of kink-unstable spheromak equilibria},
  year      = {2009/08/},
  issn      = {1070-664X},
  note      = {non-linear dynamics;kink-unstable spheromak equilibria;resistive magnetohydrodynamics;decaying plasmas;partial relaxation process;Lundquist number;poloidal flux amplification;non-axisymmetric activity;poloidal flux amplification;},
  number    = {8},
  pages     = {082507 (12 pp.) -},
  volume    = {16},
  abstract  = {The nonlinear evolution of several kink-unstable, force-free equilibria
	inside a cylindrical flux conserver is studied by solving the nonlinear,
	three-dimensional, time-dependent equations of resistive magnetohydrodynamics
	(MHD). The stability properties of the equilibria are controlled
	by the slope, &alpha;, of the linear &lambda;(&psi;) profile (where
	&lambda;=&mu;<sub>0</sub><b>J&ldr;B</b>/B<sup>2</sup> and &psi; is
	the poloidal flux). Very unstable configurations (with &alpha; well
	beyond the stability threshold) are observed to fully relax toward
	the Taylor state, as predicted by relaxation theory. In contrast,
	marginally unstable cases undergo only partial relaxation. Since
	we consider decaying plasmas without open flux (no driving), the
	partial relaxation process is a result of the dynamics of marginally
	unstable configurations. The effect of the Lundquist number, S, on
	a fixed initial condition (a fixed &alpha;) is studied. Increasing
	S leads to a higher level of fluctuations and poloidal flux amplification.
	However, it is found that, despite the stronger activity, the final
	level of relaxation is determined only by the initial slope &alpha;
	(for the high S regime considered here). The nonaxisymmetric activity
	produced by the instability is studied. The relaxation event begins
	with a dominant n=1 kink mode responsible for poloidal flux amplification
	and ends with a low activity period (of several tens of Alfve&acute;n
	times) which produces a current redistribution process that flattens
	the &lambda; profile. Finally, the MHD dynamo field is investigated.},
  address   = {USA},
  copyright = {Copyright 2009, The Institution of Engineering and Technology},
  keywords  = {kink instability;plasma confinement;plasma magnetohydrodynamics;},
  language  = {English},
  url       = {http://dx.doi.org/10.1063/1.3204639},
}

