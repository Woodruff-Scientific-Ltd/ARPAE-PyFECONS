@INPROCEEDINGS{Burton1978//,
  author = {Burton, R.L. and Turchi, P.J.},
  title = {Compact fusion reactors using controlled imploding liners},
  year = {1978//},
  volume = {II},
  pages = {1372 - 6},
  address = {Warrendale, PA, USA},
  note = {LINUS;thermonuclear fusion;adiabatic compression;plasma compression;700
	MW(e);liner implosion systems;liner;fusion reactor;Pb-Li alloy;controlled
	implosion;},
  abstract = {In the LINUS approach to thermonuclear fusion, the stabilized implosion
	of a liquid rotating first wall or liner of lead-lithium alloy is
	used to heat a D-T plasma by adiabatic compression. The repetition
	rate of the controlled implosion-plasma compression event and the
	flow rate of the linear material through the reactor are adjusted
	to maintain a linear temperature suitable for operating a steam-electric
	plant. It is shown that Q, the ratio of nuclear energy produced per
