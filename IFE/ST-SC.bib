  year      = {1991/05/},
  issn      = {0899-8221},
  note      = {magnetic probe arrays;double tilt;equilibrium;spheromak;toroidal flux conserver;empty vacuum vessel;Caltech ENCORE tokamak;magnetic helicity;injection experiments;motion;tokamak DC toroidal field;helical pitch;125 kHz;},
  number    = {5},
  pages     = {1198 - 1213},
  volume    = {3},
  abstract  = {A number of experiments have been performed on spheromaks injected
