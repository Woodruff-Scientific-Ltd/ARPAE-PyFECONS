  note      = {field-reversed configurations;FRC simulations;NIMROD code;Plasma Science and Innovation Center;PSI-Center;anisotropic heat conduction;two-fluid effects;radial boundary conditions;tangential electric field;plasma spins;shear viscosity;rotational instability;toroidal magnetic field;Hall effect;3D MHD simulation;},
  number    = {1},
